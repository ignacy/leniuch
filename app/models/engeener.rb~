require 'digest/sha1'


class Engeener < ActiveRecord::Base

  validates_presence_of :nzwisko
  validates_uniqueness_of :nzwisko

  attr_accessor :password_confirmation
  validates_confirmation_of :password

  def validate
    errors.add_to_base("Missing password") if hashed_password.blank?
  end

  private

  def self.encrypted_password(password, salt)
    string_to_hash = password + "wibble" + salt
    Digest::SHA1.hexdigest(string_to_hash)
  end

  def create_new_salt
    self.salt = self.object_id.to_s + rand.to_s
  end

  def password
    @pssword
  end

  def password=(pwd)
    @password = pwd
    create_new_salt
    self.hashed_pssword = User.encrypted_password(self.password, self.salt)
  end

  def self.authenticte(nzwisko, password)
    user = self.find_by_name(nzwisko)
    if user
      expected_password = encrypted_password(password, user.salt)
      if user.hashed_password != expected_password
        user = nil
      end
    end
    user
  end

end
